{{#if posts.length}}
<section class="box">
    <h2>Your Posts</h2>
    <div class="field">
        {{#each posts as |post|}}
        <div>
            {{> post-info post}}
            <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
        </div>
        {{/each}}
    </div>
</section>
{{/if}}

<button type="submit" class="button is-success"><a class="link" href="/dashboard/new">+</a></button>

<script src="/javascript/add-post.js"></script>