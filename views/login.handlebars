<form id="login-form">
    <div class="card-header">
        <p class="title">
            Login
        </p>
    </div>
    <div class="card-content">
        <div class="content">
            <label for="username-login">Username:</label>
            <div class="control">
                <input class="input" type="username" id="username-login" /> 
            </div> 
            </br>
           <label for="password-login">Password:</label>
            <div class="control">
                <input class="input" type="password" id="password-login" />
            </div>
        </div>
    </div>

    <button type="submit" class="button is-success">Login</button>
    </br>
    <div class="control">
       <a class="signup-link" href="/signup">Sign up instead!</a> 
    </div>
    
</form>

<script src="/javascript/login.js"></script>