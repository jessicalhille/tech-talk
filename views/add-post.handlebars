<div class="card">
    <header class="card-header">
        <p class="card-header-title">
            Create New Post
        </p>
    </header>

    <form class="card-content" id="new-post-form">
        <div class="content">
            <label for="post-title">Title</label>
            <div class="control">
                <input class="input" type="text" id="post-title" name="post-title" />
            </div>
        </div>
        <div class="content">
            <label for="content">Content</label>
            <div class="control">
                <input class="input" type="text" id="content" name="content" /> 
            </div>
        </div>

        <button type="submit" class="button is-success">Create</button> 
    </form>
</div>

<script src="/javascript/add-post.js"></script>